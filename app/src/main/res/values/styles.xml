<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Page title text is to be used for the titles of activities (the toolbar text)-->
    <style name="PageTitleText">
        <item name="android:textSize">@dimen/PageTitleTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParagraphText">
        <item name="android:textSize">@dimen/ParagraphTextSize</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ListTitleText">
        <item name="android:textSize">@dimen/ListItemTitlesTextSize</item>
        <item name="android:textColor">@color/primary_text</item>
        <!--textWeight is supposed to be medium chose bold because of Roboto contraints       -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemTitleText_andImporantText">
    <!--Size only specified because colors may vary        -->
        <item name="android:textSize">@dimen/ListItemTitlesTextSize</item>
    </style>

    <style name="SecondaryText_andCaptions">
        <item name="android:textSize">@dimen/SecondaryTextSize</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Buttons_andTabsText">
        <item name="android:textSize">@dimen/ButtonsTextSize</item>
        <!--textWeight is supposed to be medium chose bold because of Roboto contraints       -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputsText">
        <item name="android:textSize">@dimen/TextInputsTextSize</item>
    </style>
</resources>